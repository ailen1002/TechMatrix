<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true"
      internalLogLevel="Warn"
      internalLogFile="internal-nlog.log">

    <!-- 定义日志级别（Trace、Debug、Info、Warn、Error、Fatal）-->
    <targets>
        <!-- 异步输出到文件 -->
        <target xsi:type="AsyncWrapper" name="asyncFile" batchSize="100" overflowAction="Discard">
            <target xsi:type="File" fileName="logs/app.log"
                layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString,StackTrace}"
                archiveFileName="logs/archives/app.{#}.log"
                archiveNumbering="Rolling"
                archiveAboveSize="10485760"
                archiveEvery="Day"
                maxArchiveFiles="30"
                encoding="utf-8"
                concurrentWrites="true"
                keepFileOpen="false" />
        </target>

        <!-- 异步输出到控制台 -->
        <target xsi:type="AsyncWrapper" name="asyncConsole">
            <target xsi:type="Console" layout="${longdate} ${uppercase:${level}} ${message} ${exception}" />
        </target>

        <!-- Debugger 目标仍保持同步，因为它是开发用的 -->
        <target xsi:type="Debugger" name="debugger" layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=ToString,StackTrace,Data}" />
    </targets>

    <rules>
        <!-- 文件异步记录 Info 及以上的日志 -->
        <logger name="*" minlevel="Info" writeTo="asyncFile" />

        <!-- 控制台异步显示所有级别日志 -->
        <logger name="*" minlevel="Trace" writeTo="asyncConsole" />

        <!-- Debugger 记录 Debug 及以上的日志（开发环境用）-->
        <logger name="*" minlevel="Debug" writeTo="debugger" />
    </rules>
</nlog>
